/* pages/statistics/statistics.wxss */

.title {
    font-size: 1.25rem;
}

.bodycontainer {
    
}
.clockbar {
    width: 500rpx;
    height: 2rem;
    margin: 1rem 0;
    border-radius: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .clockname {
    color: #ffffff;
    height: 100%;
    margin: 0 20rpx;
  }
  .clockbarright {
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
  }
  .clockstart {
    background-color: #ffffff;
    height: 100%;
    border-radius: 0 50rpx 50rpx 0;
  }
  .textcenter {
    display: flex;
    flex-direction: row;
    align-items: center;
  }