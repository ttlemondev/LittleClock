/**index.wxss**/

page {
  /**background-color: rgb(251, 180, 224);**/
  background-color: rgb(238, 225, 217);
  padding-bottom: 60rpx;
  height: 100%;
  overflow: hidden;
}


.clockbar {
  width: 500rpx;
  height: 2rem;
  margin: 1rem 0;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.clockname {
  color: #ffffff;
  height: 100%;
  margin: 0 20rpx;
}
.clockbarright {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.clockstart {
  background-color: #ffffff;
  padding: 0 20rpx;
  height: 100%;
  border-radius: 0 50rpx 50rpx 0;
}
.textcenter {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.stopworkcontainer {
  margin-bottom: 100rpx;
}
.stopworkbutton {
  border: white 1px solid;
  border-radius: 10rpx;
  padding: 10rpx 40rpx;
}
